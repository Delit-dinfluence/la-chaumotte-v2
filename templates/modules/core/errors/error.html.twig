{% extends '@app/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/error.min.css') }}">
{% endblock %}

{% block content %}
    <div class="page page-annexe page-error">

        {# NAVIGATION #}
        {% include '@app/includes/navigation.html.twig' %}

        <header class="page-header">
            <h1 class="page-title">{{ translation.page_error_unknown_title }}</h1>
        </header>

        <div class="page-content">
            <div class="page-container">

                    {{ translation.page_error_unknown_content|raw }}

                    <a href="{{ '/' ~ locale ~  pages.home.translate(locale).uri }}"
                       class="btn-return">{{ translation.page_error_unknown_link|raw }}</a>

            </div> {# /.page-container #}
        </div>  {# /.page-content #}

        {# PAGE FOOTER #}
        {% include '@app/includes/footer.html.twig' %}

    </div> {# /.page #}
{% endblock %}
