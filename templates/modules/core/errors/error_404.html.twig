{% extends '@app/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/error.min.css') }}">
{% endblock %}

{% block content %}
    <div class="page page-error page-error404">

        {# NAVIGATION #}
        {% include '@app/includes/navigation.html.twig' %}

        <header class="page-header">
            <h1 class="page-title">{{ translation.page_error_404_title }}</h1>
        </header>

        <div class="page-content">
            <div class="page-container">

                {{ translation.page_error_404_content|raw }}

                {% if pages.home is defined %}
                    <a href="{{ '/' ~ locale ~  pages.home.translate(locale).uri }}"
                       class="btn-return">{{ translation.page_error_404_link|raw }}</a>
                {% endif %}

                {% if pages.mini is defined %}
                    <a href="{{ '/' ~ locale ~  pages.mini.translate(locale).uri }}"
                       class="btn-return">{{ translation.page_error_404_link|raw }}</a>
                {% endif %}


            </div> {# /.page-container #}
        </div> {# /.page-content #}

        {# PAGE FOOTER #}
        {% include '@app/includes/footer.html.twig' %}

    </div> {# /.page #}
{% endblock %}
