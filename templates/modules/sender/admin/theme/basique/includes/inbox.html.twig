<div class="message" data-id="{{ item.id }}">
    <div class="message-header">
        <span class="message-date">{{ item.createdAt|date('d-m-Y \à H:i') }}</span>
    </div>

    <div class="message-content">
        <div class="email-header">
            {{ item.subject }}
        </div>

        <div class="email-informations">
            <span>De</span> {{ item.identity }} <span>({{ item.email }}) à</span> moi <i class="fa fa-chevron-down"></i>
        </div>

        <div class="email-content">
            {{ item.message }}
        </div>
    </div>

    <div class="controls">
    <div class="btn-group">
        {#<button class="btn btn-default"><i class="fa fa-print"></i> Imprimer</button>#}
    </div>
        <div class="btn-group">
            <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Supprimer</button>
        </div>
    </div>
</div>